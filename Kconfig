menu "PCD8544 LCD Driver"
    
    config PCD8544_LCD_BIAS
        int "LCD bias"
        range 0 7
        default 3
        help
            Set PCD8544 LCD bias.

    config PCD8544_LCD_TEMP
        int "LCD temperature"
        range 0 3
        default 2
        help
            Set PCD8544 LCD temperature.

    config PCD8544_LCD_CONTRAST
        int "LCD contrast"
        range 0 127
        default 70
        help
            Set PCD8544 LCD contrast.

endmenu